// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Group {
  id          String      @id @default(cuid())
  name        String
  description String      @default("")
  image       String
  user_group  UserGroup[]
  project     Project[]

  @@map("groups")
}

model User {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  bio          String
  description  String
  linkedin     String?
  twitter      String?
  github       String?
  user_group   UserGroup[]
  user_project UserProject[]

  @@map("users")
}

model UserGroup {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [user_id], references: [id])
  group    Group  @relation(fields: [group_id], references: [id])
  role     String
  user_id  String
  group_id String

  @@map("users_groups")
}

enum ProjectStatus {
  draft
  published
  under_revision

  @@map("project_status")
}

model Project {
  id           String        @id @default(cuid())
  name         String
  description  String
  tags         String[]
  body         String
  images       String[]
  status       ProjectStatus @default(draft)
  license      String        @default("cc-ns-by-sa")
  group        Group         @relation(fields: [group_id], references: [id])
  user_project UserProject[]

  group_id String

  @@map("projects")
}

model UserProject {
  id           Int     @id @default(autoincrement())
  user         User    @relation(fields: [user_id], references: [id])
  project      Project @relation(fields: [project_id], references: [id])
  contribution String

  user_id    String
  project_id String

  @@map("users_projects")
}
